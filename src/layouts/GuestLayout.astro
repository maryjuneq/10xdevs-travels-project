---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const { title = "10x Travels", description } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    <title>{title}</title>
  </head>
  <body class="dark min-h-screen bg-gradient-to-br from-background via-background to-card">
    <div class="min-h-screen flex flex-col">
      <header class="w-full py-6 px-4 border-b border-border/50 backdrop-blur-sm bg-background/80">
        <div class="max-w-7xl mx-auto">
          <a href="/" class="text-2xl font-bold text-foreground hover:text-primary transition-colors"> VibeTravels </a>
        </div>
      </header>

      <main class="flex-1 flex items-center justify-center px-4 py-12">
        <slot />
      </main>

      <footer class="w-full py-6 px-4 text-center text-sm text-muted-foreground border-t border-border/30">
        <div class="max-w-7xl mx-auto">
          <p>&copy; {new Date().getFullYear()} VibeTravels. All rights reserved.</p>
        </div>
      </footer>
    </div>
  </body>
</html>
